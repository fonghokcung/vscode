{
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "editor.fontSize": 17,
  "git.openRepositoryInParentFolders": "never",
  "editor.wordWrap": "on",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "breadcrumbs.symbolPath": "off",
  "window.menuBarVisibility": "compact",
  "workbench.editor.empty.hint": "hidden",
  // 控制字体系列。
  "editor.fontFamily": "'Maple Mono NF CN','Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.hover.delay": 3000,
  "powermode.enabled": true,
  "powermode.shake.enabled": false,
  "powermode.combo.location": "off",
  // Enables ESLint as a formatter.
  "eslint.format.enable": true,
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //== 禁用和隐藏 GitHub Copilot 提供的内置 AI 功能，包括聊天、代码补全和下一个编辑建议。
  "chat.disableAIFeatures": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  // ==
  //   Node.js File Paths
  // Every file in the system has a path. On Linux and macOS, a path might look like: /users/joe/file.txt while Windows computers are different, and have a structure such as: C:\users\joe\file.txt
  // 复制相对文件路径时使用的路径分隔字符。
  "explorer.copyRelativePathSeparator": "/",
  "explorer.copyPathSeparator": "\\",
  // 执行单词相关的导航或操作时作为单词分隔符的字符。
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",

  "gitlens.ai.enabled": false,
  // "gitlens.ai.model": "vscode",
  // "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "security.workspace.trust.untrustedFiles": "open",
  "search.quickOpen.includeHistory": false,
  // 文件资源管理器根据此设置决定要显示或隐藏的文件和文件夹。（视觉上隐藏）
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    // "**/.DS_Store": true,
    "**/nginx-1**": true,
    "**/F8": true,
    "**/.vite": true,
    "**/bun.lock": true,
  },
  // 搜索排除规则
  "search.exclude": {
    "**/node_modules": true,
    "**/dist/**": true,
    "**/*.zip": true,
    "**/.git/**": true,
    // "**/temp/**": true,
  },

  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  // 在 npm 脚本中应显示“运行”和“调试”代码的位置。 它可以在脚本部分的“全部”、脚本、脚本部分的“顶部”或“从不”上面。
  "debug.javascript.codelens.npmScripts": "never",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.startupEditor": "none",
}